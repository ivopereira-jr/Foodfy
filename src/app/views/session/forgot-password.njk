{% extends "session-layout.njk" %}

{% block content %}
  <section class="user-reset-password container">
    <form method="POST" action="/login/forgot-password">
      <div class="header">
        <h3 class="users-title">Esqueceu a senha?</h3>
      </div>

      <div class="fields">
        <div class="login-item">
          <h2>Email</h2>
          <div class="input">
            <input   
              type="email" 
              name="email" 
              value="{{user.email}}"
              placeholder="Digite seu email para recuperar sua conta" 
              required
            >
          </div>
        </div><!--item-->
      </div>

      <div class="reset-password-actions">
        <button class="button" type="submit">Recuperar</button>
      </div>
    </form>

  </section>
{% endblock content %}
