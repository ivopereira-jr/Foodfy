    <form method="POST" action="/login/password-reset">
      <div class="header">
        <h3 class="users-title">Nova Senha</h3>
      </div>

      <div class="fields">
        {% include 'session/reset-fields.njk' %}
      </div>

      <div class="reset-password-actions">
        <button class="button" type="submit">Salvar</button>
      </div>
    </form>

  </section>
{% endblock content %}