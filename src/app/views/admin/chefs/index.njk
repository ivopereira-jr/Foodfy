{% extends "admin-layout.njk" %}
   
{% block title %}
   <title>Chefs</title>
{% endblock title %}   

{% block head %}
  <link rel="stylesheet" href="/css/chefs.css">
{% endblock head %}
         
{% block content %}
   <section class="chefs">
      <div class="container">
        <div class="title-chefs title-destaque">
          <h2>Gerenciar chefs</h2>
          <a class="button" href="/admin/chefs/create"">Novo chef</a>
        </div>

        <div class="chef-cards">
          {% for chef in chefs %}
            <div class="chef-card">
              <div class="chef-image">
                <img src="{{chef.img}}" alt="imagem de {{chef.name}}">
              </div>
              <div class="chef-info">
                <h2>{{chef.name}}</h2>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
              </div>
            </div>
          {% endfor %}
        </div><!--chef-cards-->
      </div><!--container-->
   </section><!--chefs-->
{% endblock content %}      
 
