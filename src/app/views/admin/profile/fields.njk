<div class="login-item">
   <h2>Nome</h2>
   <input   
      type="text" 
      name="name" 
      placeholder="Digite o nome completo" 
      value="{{user.name}}" 
      onblur="Validate.apply(this, 'isName')"
      required
   >
</div><!--item-->

<div class="login-item">
   <h2>Email</h2>
   <input   
      type="email" 
      name="email" 
      placeholder="Digite o email" 
      value="{{user.email}}" 
      onblur="Validate.apply(this, 'isEmail')"
      required
   >
</div><!--item-->

<div class="login-item">
   <h2>Senha</h2>
   <input   
      type="password" 
      name="password" 
      placeholder="Digite a senha" 
      required
   >
</div><!--item-->





