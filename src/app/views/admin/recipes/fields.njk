<div class="create-item">
   <h2>Imagems da receita</h2>
   <div class="photos-recipe">
      <div class="photos-upload">
         <input type="file" name="photos" id="photos-input" multiple accept="image/*" onchange="photosUpload.fileUploadInput(event)">{# o name do input de file vai ser usado nas rotas post e put ver o arquivo de routes #}
         <span class="material-icons">add</span>
     </div>
     <div id="photos-preview">
        {% if files %}
            {% for image in files %}
               <div class="photo" id="{{image.id}}">
                     <img src="{{image.src}}" alt="{{image.name}}">
                     <span class="material-icons" onclick="photosUpload.removeOldPhoto(event)">delete_forever</span>
               </div>
            {% endfor %}
            <input type="hidden" name="removed_files">
        {% endif %}
     </div>
   </div>
</div><!--create-item-->
<div class="create-item">
   <h2>Chef</h2>
   <select name="chef_id">
         <option value="0" selected disabled>Selecione um chef</option>
      {% for chef in chefOptions %}
         <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected {% endif %}>
            {{chef.name}}
         </option>
      {% endfor %}
   </select>
</div><!--create-item-->
<div class="create-item">
   <h2>Nome da receita</h2>
   <input type="text" name="title" value="{{recipe.title}}" placeholder="ex. Bife acebolado">
</div><!--create-item-->
<div class="create-item">
   <h2>Ingredientes</h2>
   <div class="ingredients">
      {% if recipe %}
         {% for ingredient in recipe.ingredients %}
            <div class="ingredient">
               <input type="text" name="ingredients[]" value="{{ingredient}}" placeholder="ex. 100g de queijo...">
            </div><!--ingredient-->
         {% endfor %}
      {% else %}
         <div class="ingredient">
            <input type="text" name="ingredients[]" placeholder="ex. 100g de queijo...">
         </div><!--ingredient-->
      {% endif %}
   </div><!--ingredients-->
   <a class="add-ingredient">Adicionar novo ingrediente</a>
</div><!--create-item-->
<div class="create-item">
   <h2>Modo de preparo</h2>
   <div class="steps">
      {% if recipe %}
         {% for step in recipe.steps %}
            <div class="step">
               <input type="text" name="steps[]" value="{{step}}" placeholder="ex. Misture todos os ingredientes">
            </div><!--step-->
         {% endfor %}
      {% else %}
         <div class="step">
            <input type="text" name="steps[]" value="{{step}}" placeholder="ex. Misture todos os ingredientes">
         </div><!--step-->
      {% endif %}
   </div><!--steps-->
   <a class="add-step">Adicionar novo passo</a>
</div><!--create-item-->
<div class="create-item">
   <h2>Informações adicionais</h2>
   <textarea name="information" placeholder="ex. Preaqueça o forno a 180°">{{recipe.information}}</textarea>
</div><!--create-item-->
