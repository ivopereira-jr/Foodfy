{% extends "admin-layout.njk" %}
   
{% block title %}
   <title>Editar Receita</title>
{% endblock title %} 

{% block head %}
   <link rel="stylesheet" href="/styles/admin.css">
{% endblock head %}

{% block content %}
  <section class="create-recipe">
    <div class="container">      
        <div class="forms-actions">
          <form class="form-save" method="POST" action="/admin/recipes?_method=PUT" enctype="multipart/form-data">
              <div class="title-content">
                <h2>Editar receita</h2>
                <button type="submit">Salvar receita</button>
              </div>

              {% include 'admin/recipes/fields.njk' %}
                          
              <input type="hidden" name="id" value="{{recipe.id}}">    
          </form>             
  
          <form id="form-delete" method="POST" action="/admin/recipes?_method=DELETE">
              <input type="hidden" name="id" value="{{recipe.id}}">

              <button class="delete" type="submit">Deletar</button>
          </form>  
        </div><!--forms-actions-->      
    </div><!--container-->
  </section>
{% endblock content %}



