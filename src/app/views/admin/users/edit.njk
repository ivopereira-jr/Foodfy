{% extends "admin-layout.njk" %}
   
{% block title %}
   <title>Atualizar Usuário</title>
{% endblock title %} 

{% block head %}
   <link rel="stylesheet" href="/styles/session.css">
   <link rel="stylesheet" href="/styles/users.css">
{% endblock head %}

{% block content %}
   <section class="edit-user users-content">
      <div class="container user">      
         <div class="forms-actions">
            <form class="form-save" method="POST" action="/admin/users?_method=PUT">
               <div class="title-content">
                  <h2>Atualizar Usuário</h2>
                  <button type="submit">Salvar</button>
               </div>

               <div class="fields">
                  {% include 'admin/users/fields.njk' %}
               </div>
                           
               <input type="hidden" name="id" value="{{user.id}}">    
            </form>             
   
            <form id="form-delete" method="POST" action="/admin/users?_method=DELETE">
               <input type="hidden" name="id" value="{{user.id}}">

               <button class="delete" type="submit">Deletar</button>
            </form>  
         </div><!--forms-actions-->      
      </div><!--container-->
   </section>
{% endblock content %}



