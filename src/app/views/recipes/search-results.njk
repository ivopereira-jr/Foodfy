{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/receitas.css">
{% endblock head %}

{% block header %}
  <form class="search" action="/receitas" method="GET">
    <input type="text" name="filter" value="{{filter}}" placeholder="Buscar uma receita">
    <button type="submit">Buscar</button>
  </form>
{% endblock header %}

{% block content %}
  <section class="resultado-receitas">
    <div class="container">
      <div class="resultado-title-content">
        <h2>Buscando por "{{search}}"</h2>
      </div>
      <div class="resultado-cards-receitas">
        {% for recipe in recipes %}
          <div class="card" id="{{recipe.id}}">
            <div class="card-img">
              <img src="{{recipe.img}}" alt="imagem de {{recipe.title}}">
            </div>
            <!--card-img-->
            <div class="card-info">
              <h2>{{recipe.title}}</h2>
              <p>por
                {{recipe.chef_name}}</p>
            </div>
            <!--card-info-->
          </div>
          <!--card-->
        {% endfor %}
      </div>
      <!--cards-receitas-->
      <div 
        class="pagination" 
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{search}}
      >
      </div>
    </div>
  </section>
{% endblock content %}

{% block script %}
  <script src=" /js/pagination.js"></script>
{% endblock script %}