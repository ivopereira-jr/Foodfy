{% extends "layout.njk" %}

{% block title %}
  <title>Receita |
    {{recipe.title}}</title>
{% endblock title %}

{% block head %}
  <link rel="stylesheet" href="/styles/receita.css">
{% endblock head %}

{% block content %}
  <section class="receita">
    <div class="container">
      <div class="receita-card">
        <div class="receita-files">
          <div class="receita-img">
            {% if not recipe.files[0] %}
              <img src="http://placehold.it/500x500" alt="Sem foto">
            {% else %}
              <img src="{{recipe.files[0].src}}" alt="imagem de {{recipe.files[0].name}}">
            {% endif %}
          </div>
          <!--card-img-->
          <div class="gallery-preview">
            {% for image in recipe.files %}
              <img src="{{image.src}}" alt="{{image.name}}" {% if loop.index0 == 0 %} class="active" {% endif %} onclick="imageGallery.setImage(event)">
            {% endfor %}
          </div>
        </div>
        <div class="receita-info">
          <h2>{{recipe.title}}</h2>
          <p>por
            {{recipe.chef_name}}</p>
        </div>
        <!--card-info-->
      </div>
      <!--receita-card-->
      <div class="receita-descricao">
        <div class="receita-wraper">
          <h2>Ingredientes
            <a class="open-close">Esconder</a>
          </h2>
          <ul>
            {% for ingredient in recipe.ingredients %}
              <li>{{ ingredient }}</li>
            {% endfor %}
          </ul>
        </div>
        <!--receita-wrape-->
        <div class="receita-wraper">
          <h2>Modo de preparo
            <a class="open-close">Esconder</a>
          </h2>
          <ul>
            {% for step in recipe.steps %}
              <li>{{ step }}</li>
            {% endfor %}
          </ul>
        </div>
        <!--receita-wraper-->
        <div class="receita-wraper">
          <h2>Informações adicionais
            <a class="open-close">Esconder</a>
          </h2>
          <p>{{recipe.information}}</p>
        </div>
        <!--receita-wraper-->

      </div>
      <!--receita-descricao-->
    </div>
    <!--container-->
  </section>
  <!--receita-->
{% endblock content %}

{% block script %}
  <script src="/js/photos-upload.js"></script>
{% endblock script %}